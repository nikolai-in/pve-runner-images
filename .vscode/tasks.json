{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",

  // Associate with test task runner
  "tasks": [
    {
      "label": "Test",
      "type": "shell",
      "command": "Invoke-Pester",
      "args": [
        "-Script",
        "test",
        "-PesterOption",
        "@{IncludeVSCodeMarker=$true}"
      ],
      "problemMatcher": "$pester",
      "group": "test"
    },
    {
      "label": "Build Cache",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        ".\\Build-DownloadCache.ps1 -Platform windows -Verbose"
      ],
      "options": {
        "cwd": "${workspaceFolder}/helpers"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Discover Cache URLs",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        ".\\Get-CacheUrls.ps1 -Platform windows"
      ],
      "options": {
        "cwd": "${workspaceFolder}/helpers"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Cache Report",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        ".\\Compare-CacheStatus.ps1 -OutputFormat Table"
      ],
      "options": {
        "cwd": "${workspaceFolder}/helpers"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Cache Report (Markdown)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        ".\\Compare-CacheStatus.ps1 -OutputFormat Markdown; Write-Host 'Report saved to helpers/README-CACHE.md' -ForegroundColor Green; code README-CACHE.md"
      ],
      "options": {
        "cwd": "${workspaceFolder}/helpers"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
